@page
@model MaintenanceLog.Pages.Admin.Orders.DetailsModel
@{
}

<h3 class="rounded p-2 my-2 text-white text-center" style="background-color: #08618d;">Complain Details</h3>


<div class="row mb-3 py-3">
    <div class="col-lg-6">
        <div class="border rounded p-3 h-100">
            <h3>Order</h3>

            <table class="table">
                <tr>
                    <td>ID</td>
                    <td>@Model.complainInfo.id</td>
                </tr>
                <tr>
                    <td>Utility</td>
                    <td>@Model.complainInfo.utilities</td>
                </tr>
                <tr>
                    <td>Room</td>
                    <td>@Model.complainInfo.room</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.complainInfo.description</td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td>
                        <a href="#" data-bs-toggle="modal" data-bs-target="#paymentModal">
                            @Model.complainInfo.Status
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>Date</td>
                    <td>@Model.complainInfo.CreatedAt</td>
                </tr>
                
            </table>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="border rounded p-3 h-100">
            <h3>Client</h3>

            <table class="table">
                <tr>
                    <td>Client ID</td>
                    <td>@Model.userInfo.id</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>@Model.userInfo.firstname @Model.userInfo.lastname</td>
                </tr>
                <tr>
                    <td>Matric No</td>
                    <td>@Model.userInfo.matricno</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Model.userInfo.email</td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td>@Model.userInfo.phone</td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td>@Model.userInfo.hall</td>
                </tr>
                <tr>
                    <td>Registered At</td>
                    <td>@Model.userInfo.createdAt</td>
                </tr>
            </table>
        </div>
    </div>
</div>



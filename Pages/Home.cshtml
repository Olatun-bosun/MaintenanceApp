<style>




    .book-item img {
        width: 100%;
        height: 260px;
        object-fit: contain;
        background: radial-gradient(white 50%, lightblue 100%)
    }

    .book-item {
        transition: all 0.3s ease;
    }

        .book-item:hover {
            transform: scale(1.05);
        }
</style>

<!-- Hero section -->

<div class="py-5" style="background-color: #08618d;">
    <div class="container text-white">
    <div class="row">
    <div class="col-md-6 pb-3">
    <h1 class="display-2"><strong>Babcock Maintenance </strong></h1>
    <br />
    <h3>
   Maintenance At It's Best!!!!!!
    </h3>
    <br />
    
    </div>
    <div class="col-md-6">
    <img src="/images/pic.jpeg" class="img-fluid rounded" alt="">
    </div>
    </div>
    </div>
    </div>
    </div>

    <!-- Newest Books Section -->
    <div class="py-5">
        <div class="container">
            <h1 class="pb-5 text-center display-5"><strong>Newest Utilities</strong></h1>
            <div class="row">
                @foreach (var item in Model.listUtilitys)
                {
                    <div class="col-lg-3 col-sm-6 my-2">
                        <div class="card shadow text-center h-100 book-item">
                            <img src="/images/books/@item.ImageFileName" class="card-img-top p-3" alt="..." />
                            <div class="card-body">
                                <h4>@item.Name</h4>
                                <p>Category: @item.Class</p>
                                <a class="btn btn-primary btn-sm my-2" href="/BookDetails?id=@(item.Id)" role="button">Details</a>
                                
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

